<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox fx:id="choiceRoot" prefHeight="162.0" prefWidth="417.0" stylesheets="@Styles.css"
      xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller2">
    <children>
        <HBox alignment="CENTER" prefHeight="11.0" prefWidth="490.0">
            <children>
                <Label fx:id="label" text="Choose your side">
                    <font>
                        <Font size="51.0"/>
                    </font>
                </Label>
            </children>
        </HBox>
        <GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                  prefHeight="121.0" prefWidth="402.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button fx:id="button2" focusTraversable="false" mnemonicParsing="false" onMousePressed="#chooseX"
                        prefHeight="80.0"
                        prefWidth="150.0" text="X" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Button>
                <Button fx:id="button1" focusTraversable="false" mnemonicParsing="false" onMousePressed="#chooseO"
                        prefHeight="80.0"
                        prefWidth="150.0" text="O" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                        GridPane.valignment="CENTER">
                    <font>
                        <Font size="36.0"/>
                    </font>
                </Button>
            </children>
        </GridPane>
    </children>
</VBox>
